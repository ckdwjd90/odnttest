<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="#ffffff">

	<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:orientation="vertical"
		android:paddingRight="5px" android:gravity="center"
		android:background="@drawable/a2">

		<ImageView android:id="@+id/ImageView01"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
		<Button android:id="@+id/Button04" android:layout_marginTop="10dp"
			android:background="@drawable/retake" android:layout_width="125dp"
			android:layout_height="52dp"></Button>
		<AutoCompleteTextView android:id="@+id/AutoCompleteTextView01"
			android:layout_height="wrap_content" android:hint="문제의 키워드를 입력해주세요"
			android:layout_width="fill_parent" android:layout_marginTop="25dp"></AutoCompleteTextView>
		<TextView android:id="@+id/TextView01" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="카테고리를 지정해주세요."
			android:textColor="#111111"></TextView>
		<LinearLayout android:id="@+id/LinearLayout02"
			android:layout_height="wrap_content" android:layout_width="fill_parent">
			<Spinner android:id="@+id/Spinner01" android:layout_height="wrap_content"
				android:layout_width="120dp"></Spinner>
			<Spinner android:id="@+id/Spinner02" android:layout_height="wrap_content"
				android:layout_width="120dp"></Spinner>
			<Button android:id="@+id/Button01" android:textSize="12dp"
				android:background="@drawable/confirm1" android:layout_height="52dp"
				android:layout_width="98dp"></Button>
		</LinearLayout>

		<EditText android:id="@+id/EditText02"
			android:layout_marginBottom="15dp" android:background="@drawable/memo"
			android:layout_width="300dp" android:layout_height="200dp"></EditText>

		<LinearLayout android:id="@+id/LinearLayout04"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:gravity="center">
			<Button android:id="@+id/Button02" android:background="@drawable/reg"
				android:layout_width="90dp" android:layout_height="92dp"></Button>
			<Button android:id="@+id/Button03" android:background="@drawable/cancel"
				android:layout_width="90dp" android:layout_height="92dp"></Button>
		</LinearLayout>

		<TextView android:id="@+id/TextView02" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="문제정답과 중요도를 체크해주세요."
			android:visibility="invisible"></TextView>
		<LinearLayout android:id="@+id/LinearLayout03"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:visibility="invisible">
			<Spinner android:id="@+id/Spinner03" android:layout_height="wrap_content"
				android:layout_width="70dp"></Spinner>
			<Spinner android:id="@+id/Spinner04" android:layout_height="wrap_content"
				android:layout_width="70dp"></Spinner>
		</LinearLayout>


	</LinearLayout>

</ScrollView>